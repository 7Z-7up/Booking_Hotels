@model IEnumerable<Booking.Core.DTO.OrderForUserDTO>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table-container {
        background-color: #f8f9fa; /* Light gray background */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }

    .table-header {
        background-color: #007bff; /* Blue header background */
        color: #fff; /* White text */
    }

    .table-row:hover {
        background-color: #e9ecef; /* Light gray hover effect */
    }

    .action-buttons {
        text-align: center;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="table-container">
                <h1 class="text-center">Index</h1>
                <table class="table table-striped">
                    <thead class="table-header">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PaymentType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Start_Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.End_Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HotelName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HotelRate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HotelAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OrderId)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="table-row">
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalCost)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Start_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.End_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HotelName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HotelRate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HotelAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderId)
                                </td>
                                <td class="action-buttons">
                                    @Html.ActionLink("Detail", "Detail", new { id = item.OrderId }, new { @class = "btn btn-info" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
